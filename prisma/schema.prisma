datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch","fullTextIndex"]
}

model Course {
  id String  @id @default(cuid()) @map("_id")
  userId String 
  title String
  description String?
  imgUrl String?
  price Float?
  isPublished Boolean @default(false)

  // categoryId String?
